<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="textInputLayoutStyle" parent="">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/primaryOrange</item>
        <item name="boxCornerRadiusBottomEnd">30dp</item>
        <item name="boxCornerRadiusBottomStart">30dp</item>
        <item name="boxCornerRadiusTopEnd">30dp</item>
        <item name="boxCornerRadiusTopStart">30dp</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/black</item>
        <item name="helperText">Required</item>
        <item name="helperTextTextColor">@color/red</item>
    </style>
    <style name="textInputEditTextStyle" parent="">
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="btnSignStyle" parent="">
        <item name="android:background">@drawable/bg_button_sign</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_100</item>
    </style>
    <style name="textViewSign" parent="">
        <item name="android:fontFamily">@font/poppins_extrabold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/primaryGreen</item>
    </style>
</resources>